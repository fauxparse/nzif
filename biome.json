{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "always",
      "lineWidth": 100
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noAutofocus": "off",
        "noRedundantAlt": "off",
        "useKeyWithClickEvents": "off",
        "useValidAnchor": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": "off"
      },
      "style": {
        "useImportType": "off",
        "useNumberNamespace": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noConsoleLog": "error"
      }
    }
  },
  "files": {
    "ignore": ["*.typegen.ts", "*.gen.ts", "graphql-env.d.ts"]
  }
}
